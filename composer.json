{
    "name": "padhie/twitch-api-bundle",
    "version": "1.1.13",
    "type": "library",
    "keywords": [
        "twitch",
        "twitch.tv",
        "twitch-tv",
        "twitch-api",
        "api"
    ],
    "license": "MIT",
    "description": "A little collection to work with the Twitch-Api https://dev.twitch.tv/docs/v5/",
    "authors": [
        {
            "name": "padhie",
            "email": "admin@padhie.de"
        }
    ],
    "require": {
        "php": "^7.1",
        "ext-curl": "*",
        "ext-json": "*",
        "guzzlehttp/guzzle": "^6.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^7",
        "phpstan/phpstan": "^0.12"
    },
    "autoload": {
        "psr-4": {
            "Padhie\\TwitchApiBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Padhie\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "phpunit": ["vendor/bin/phpunit tests"],
        "phpstan": ["vendor/bin/phpstan analyse -l 7 --ansi src"]
    }
}
